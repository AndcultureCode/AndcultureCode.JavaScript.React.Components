{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "rootDir": "../src",
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "**/*/*.test.ts",
        "examples"
    ]
}
